{
  "compilerOptions": {
    "target": "ES2017",               
    "module": "CommonJS",             
    "moduleResolution": "node",       
    "outDir": "./dist",               
    "rootDir": "./src",               
    "esModuleInterop": true,          
    "strict": true,                   
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true, 
    "declaration": true,              
    "declarationMap": true,           
    "sourceMap": true,                
    "lib": ["ES2017", "DOM"],         
    "allowJs": false,                 
    "skipDefaultLibCheck": true,      
    "resolveJsonModule": true         
  },
  "include": ["src/**/*"],            
  "exclude": ["node_modules", "dist"] 
}
